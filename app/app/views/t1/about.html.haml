!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %title
      About #{@property.name}
    
    = stylesheet_link_tag "t1-business-casual", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:300,400,700", :rel => "stylesheet", :type => "text/css"
    = stylesheet_link_tag "/assets/t1-parallax.css", :rel => "stylesheet", :type => "text/css", "data-skrollr-stylesheet" => ""

  %body
    
    / Preloader
    #preloader.preloader
    
    #wrapper  
      / Menu
      %nav#nav.navbar.navbar-default.navbar-fixed-top.easing{:role => "navigation"}
        .container
          
          .navbar-header
            %button.navbar-toggle{"data-target" => "#collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "index.html"}
          
          #collapse-1.collapse.navbar-collapse
          
            %ul.nav.navbar-nav.navbar-right
              %li
                %a{ :href => comm_preview_page_path(@comm.id, 'index') }
                  %i.fa.fa-home  
              %li.active
                = link_to 'Our Story',comm_preview_page_path(@comm.id,'about')
              %li
                = link_to 'Our Community', comm_preview_page_path(@comm.id,'community')
              %li
                = link_to 'Contact', comm_preview_page_path(@comm.id,'contact')
                
            %ul.nav.navbar-nav.navbar-left
              %li
                %a.btn.btn-default.easing{:href => properties_path}
                  %i.fa.fa-reply
                  My Properties
                  
                  
      / Welcome section
      %section.welcome.fx-show{:style => "background-image: url(/assets/t1-main2.jpg)"}
        .overlay
        .container
          .row.head
            .col-md-12.text-center
              %h1= @comm.name
              %p.subhead
                %i.fa.fa-map-marker
                = @comm.address["line1"]
                = @comm.address["line2"]
                = @comm.address["city"]
                = @comm.address["state"]
                = @comm.address["zip"]
                |
                %i.fa.fa-phone
                = @pin["pPhone"]
              
      
      %section.feature.relative
        .container
          .image.left{ :style => "background-image:url(/assets/t1-staff2.jpg);" }
        .container
          .row
            .col-md-7.col-md-offset-5
              %h2.title= @pin["pWelcomeSlogan"]
              %hr.left
                %p
                  Hi I am #{@pin["pOwnerName"]} . Hope we can answer your questions
                %p= @pin["pOwnerExperience"]
                %p= @pin["pOwnerMessage"]
     
     
              
                
                
              
      %section.services.feature.inverted
        .container
          .row
            .col-md-12.text-center
              %h1.title SERVICES
              %hr/
              %p= @pin["pStaffDescription"]
              %br/
          %ul.row
            - @pin["pServices"].each do |services|
              %li.col-md-4= services
              
              
                
      
      
      
            
              
      %footer{:style => "background-image: url(/assets/t1-picture-3.jpg)"}
        .overlay
        .container
          
          .row
            .col-md-4.main
              
              %h2= @property.name
              %p.lead= @pin["pOwnerExperience"] 
              %p
                %i.fa.fa-user
                = @pin["pOwnerName"]
              
            .col-md-4.text-center.social
            
              %h3.title SOCIAL NETWORKS
              %p
                %i.fa.fa-facebook
                %i.fa.fa-twitter
                %i.fa.fa-google-plus
                %i.fa.fa-skype
                %i.fa.fa-linkedin
                %i.fa.fa-pinterest
                %i.fa.fa-instagram
              
            .col-md-4.contacts
              
              %h3.title.text-center OUR CONTACTS
              
              %ul
                %li
                  %i.fa.fa-envelope.text-brown
                  %a{ :href => "mailto:#{@pin["pEmail"]}" }= @pin["pEmail"]
                
                %li
                  %i.fa.fa-phone.text-brown
                  = @pin["pPhone"]
                  
              
          .row
          
            .col-md-12.text-center.links
             
              %ul.nav.navbar-nav
                %li
                  = link_to 'Home', comm_preview_page_path(@comm.id, 'index')
                %li
                  = link_to 'Our Story',comm_preview_page_path(@comm.id,'about')
                %li
                  = link_to 'Our Community', comm_preview_page_path(@comm.id,'blog')
                %li
                  %a{:href => "contact.html"} Contact
                
            .col-md-12.text-center.copy
              %p
                Copyright &copy; #{@comm.name+ " "+ Time.now.year.to_s}
                
                
    
    / JavaScript
    = javascript_include_tag "t1.js"