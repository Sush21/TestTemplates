<h1>Listing comms</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comms.each do |comm| %>
      <tr>
        <td><%= link_to comm.name, comm %></td>
        <td><%= link_to 'Edit', edit_comm_path(comm) %></td>
        <td><%= link_to 'Destroy', comm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

