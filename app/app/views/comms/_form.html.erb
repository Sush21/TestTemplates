                <label class="col-sm-3 col-md-3 col-lg-2 control-label">Welcome Message from Owner/Operator</label>
                <div class="col-sm-9 col-md-9 col-lg-10">
                  <%= text_area_tag(:pWelcomeText, @pin["pWelcomeText"] , :class => 'form-control',:rows=>5) %>
                </div>
              </div>
            </div>
            <div id="form-wizard-2" class="step">
