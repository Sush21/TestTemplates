                <label class="col-sm-3 col-md-3 col-lg-2 control-label">Community Relations Person(For Marketing)</label>
                <div class="col-sm-9 col-md-9 col-lg-10">
                  <%= text_field_tag(:pContactName, @pin["pContactName"] , :class => 'form-control input-sm') %>
